.side-ber
  .side-ber_user-name
    .side-header_box
      .side-header_box-username
        = current_user.name
      .side-header_box-menu
        = link_to new_group_path, class: "contents__btn contents__btn1" do
          %i.far.fa-edit.header-items__icons--pen
        = link_to edit_user_path(current_user), class: "contents__btn contents__btn2" do
          %i.fa.fa-cog.header-items__icons--cog
  .side-ber_group-list
    - current_user.groups.each do |group|
      .side-ber_group-box
        = link_to group_messages_path(group) do
          .side-ber_group-name
            = group.name
          .side-ber_group-text
            = group.show_last_message

  
